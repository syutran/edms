<p id="notice"><%= notice %></p>

<h1>Listing Device Images</h1>

<table>
  <thead>
    <tr>
      <th>Device</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @device_images.each do |device_image| %>
      <tr>
        <td><%= device_image.device_id %></td>
        <td><%= link_to 'Show', device_image %></td>
        <td><%= link_to 'Edit', edit_device_image_path(device_image) %></td>
        <td><%= link_to 'Destroy', device_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

